@model Irisi_Bruno_lab3.Models.Users

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row">

        <div class="col">
        </div>

        <div class="col-6 add-border spacer">

            <form asp-action="Login" asp-controller="Users" class="form-signin">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="top-spacer bottom-spacer grey">
                    <h1>Login</h1>
                </div>

                <div class="form-label-group red">
                    @ViewBag.UserCreatedSuccessfullyMessage
                </div>
                <div class="form-label-group bottom-spacer red">
                    @ViewBag.FailedLogin
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Username</label>
                    <input asp-for="UserName" type="text" id="UserName" class="form-control" placeholder="UserName" required autofocus>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input asp-for="UserPassword" type="password" id="UserPassword" class="form-control" placeholder="Password" required autofocus>
                    <span asp-validation-for="UserPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-lg btn-primary btn-block bottom-spacer">LOGIN</button>
            </form>

        </div>

        <div class="col">
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

